<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ltd.akhbod.omclasses.MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/om_logo_new" />
    </FrameLayout>

    <Button
        android:id="@+id/main_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/frame"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_backup_black_24dp"
        android:text="Upload Student Profile"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_upload"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_testManagmnt"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_record"
        android:background="@color/grey" />

    <Button

        android:id="@+id/main_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/main_upload"
        android:layout_alignStart="@+id/main_upload"
        android:layout_below="@+id/main_upload"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_find_in_page_black_24dp"
        android:text="Student Record"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/main_testManagmnt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_record"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_touch_app_black_24dp"
        android:text="Test Management"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>
